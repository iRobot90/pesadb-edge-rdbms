# Example environment variables for PesaTrack
# Copy this file to .env and fill with your secrets (do NOT commit real keys).

# Server port
PORT=3000

# CORS origin allowed (for the SPA). Set to your deployed origin in production.
CORS_ORIGIN=http://localhost:3000

# API keys: either provide API_KEYS as comma-separated key:role pairs
# Example: API_KEYS=abcd1234:admin,efgh5678:user
API_KEYS=

# Or set individual keys (convenience)
ADMIN_API_KEY=
USER_API_KEY=

# Rate limiting (window in ms, default 15 minutes)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100
